{
  "manifest_version": 3,
  "name": "Element Inspector",
  "version": "1.0.0",
  "description": "Inspect HTML elements on hover - view IDs, classes, tags, and attributes instantly",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "id-icon.png",
    "default_title": "Element Inspector"
  },
  "icons": {
    "16": "id-icon.png",
    "48": "id-icon.png",
    "128": "id-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
